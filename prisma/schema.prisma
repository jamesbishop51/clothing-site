// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  Id          Int      @id @default(autoincrement())
  code        String   @unique
  Name        String
  Description String
  Price       Float
  Colours     Colour[]
}

model Colour {
  Id        Int     @id @default(autoincrement())
  Name     String
  Image     String
  ProductId Int
  Product   Product @relation(fields: [ProductId], references: [Id])
  Size      Size[]

  @@index([ProductId])
}

model Size {
  Id       Int    @id @default(autoincrement())
  Size     String
  InStock  Int
  ColourId Int
  Colour   Colour @relation(fields: [ColourId], references: [Id])

  @@index([ColourId])
}
